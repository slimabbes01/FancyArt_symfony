{% extends 'front.html.twig' %}

{% block title %}New Post{% endblock %}

{% block body %}
    <br><br>
    <div  style="text-align: center !important;">
        {{ form_start(form, {'attr': {'class': 'tm-contact-form mx-auto'}})}}

            <div class="form-group">

                {{ form_widget(form.description, { 'attr': {'class': 'form-control rounded-0','placeholder': 'Description'}}) }}
                {{ form_errors(form.description) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.file, { 'attr': {'class': 'form-control rounded-0','placeholder': 'image'}}) }}
                {{ form_errors(form.file) }}
            </div>

            <div class="form-group tm-text-right">
                <button type="submit" class="btn btn-primary">Send</button>
            </div>
        {{ form_end(form) }}

    </div>

{% endblock %}
